<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@android:color/holo_orange_dark</item>
    </style>

    <style name="AppThemeNoAction" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">@android:color/holo_orange_light</item>
    </style>

    <style name="ToolbarItemsColored" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/holo_orange_light</item>
        <item name="android:textColorPrimary">#D3D3D3</item>
    </style>

</resources>
